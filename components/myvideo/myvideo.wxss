.item-see1 {
  width: 24rpx;
  height: 18rpx;
  margin-right: 12rpx;
}

.show-position {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}

.item-number {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(207, 207, 207, 1);
  line-height: 20rpx;
}
