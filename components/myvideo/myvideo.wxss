/* components/myvideo/myvideo.wxss */
@import '../../utils/public.wxss';

.course-poster {
  width: 750rpx;
  height: 400rpx;
  position: relative;
}

.poster-pic {
  width: 750rpx;
  height: 400rpx;
}

.poster-bg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 666;
  width: 750rpx;
  height: 400rpx;
  background: rgba(0, 0, 0, 0.8);
}

.button-sie {
}

.show-size {
  width: 84rpx;
  height: 84rpx;
  margin: 10rpx auto;
}

.poster-play {
  width: 84rpx;
  height: 84rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 999;
}

.can-learn {
  position: absolute;
  left: 50%;
  top: 246rpx;
  transform: translateX(-50%);
  z-index: 999;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
}

.cover-video-two {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
}

