/* components/movearea/movearea.wxss */

/* 可移动区域*/
.move-plcae{
  position: fixed; 
  left: 0;
  top: 80rpx;
  z-index: 3;
  width: 100%;
  box-sizing: border-box;
  pointer-events: none;
}
.continue-play{
  width: 100rpx;
  height: 100rpx;
  left: 100%;
  top: 60%;
  border-radius: 50%;
  z-index: 555;
  pointer-events:all;  
}
.show-images{
   width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.2);
  position: absolute;
  z-index: 999;
}
.show-time-title{
  font-size: 24rpx;
  position: absolute;
  background: #FF3747;
  color: #FFFFFF;
  width: 188rpx;
  left: -140rpx;
  top: 13rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  border-radius: 8rpx;
  z-index: 556;
}
.show-text{
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  z-index: 555;
  display: flex;
  border-radius:50%;
  color: #000000; 
  font-size:30rpx;
  background-color: lightblue; 
  flex-direction: column;
  justify-content: center;
}
.text-word{
  width: 80%;
  margin: 0 auto;
}
