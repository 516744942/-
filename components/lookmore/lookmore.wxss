/* components/lookmore/lookmore.wxss */
@import '../../utils/public.wxss';

.notability-top {
}

.notability-title {
  width: 196rpx;
  height: 90rpx;
  position: relative;
}

.notability-title-content {
  text-align: center;
  line-height: 89rpx;
  color: #fff;
}

.notability-title-bg {
  width: 196rpx;
  height: 106rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}

.master-look-more {
  font-weight: bold;
  margin-top: 26rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-family: PingFangSC-Semibold;
  color: #494949;
  margin-bottom: 20rpx;
  padding-right: 30rpx;
}

/* 样式二 */

.more-total {
  margin: 30rpx 0 40rpx;
}

.title {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 700;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
}

.look-more-Two {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(148, 148, 148, 1);
  line-height: 24rpx;
}

/* 样式3 */
.more-total3 {
  padding: 40rpx 20rpx 30rpx;
}
.title3 {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 700;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
}
