/* components/teacherbox/teacherbox.wxss */
/* 样式一 */
@import '../../utils/public.wxss';
.teacher-box {
  padding: 30rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 8rpx;
}

.teacher-pic {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.name {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
  margin-right: 20rpx;
}

.label {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(146, 168, 183, 1);
  line-height: 20rpx;
}

.des {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(112, 112, 112, 1);
  line-height: 34rpx;
}

/* 样式2 */
.teacher-pic2{
  width: 60rpx;
  height: 60rpx;
}
.name2{
  margin-bottom: 10rpx;
}

.des2{
  padding:0 30rpx 50rpx;
  background: rgba(245, 245, 245, 1);
  margin-top: 0;
}


/* 样式3 */
.each-person {
  width: 342rpx;
  height: 342rpx;
  text-align: center;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0 0 10rpx #ccc;
  border-radius: 10px;
  overflow: hidden;
  margin-bottom: 20rpx;
  padding-top: 50rpx;
}

/* .each-person:last-child {
  margin-right: 20rpx;
} */

.portrait-total {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
  left: 50%;
  transform: translate(-50%, 0);
  overflow-x: hidden;
  overflow-y: hidden;
  margin-top: 20rpx;
  margin-bottom: 22rpx;
  z-index: 2;
}

.portrait {
  margin-right: 10px;
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  border-radius: 140rpx;
}

.portrait-identity {
  position: absolute;
  top: 105rpx;
  left: 0rpx;
  z-index: 2;
  width: 100%;
  /* margin-top: 100rpx; */
  color: #fff;
  background: rgba(255, 226, 146, 0.5);
}

.person-name {
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
}

.person-identity {
  text-align: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(146, 168, 183, 1);
  line-height: 20rpx;
}