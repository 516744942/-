.search-position {
  position: relative;
  width: 100%;
  background: #fff;
  height: 76rpx;
  border-radius: 8px;
}

.audio-input {
  background: #f3f3f3;
  height: 76rpx;
  text-align: center;
  background: rgba(255, 255, 255, 1);
  border-radius: 8px;
}
.input-icon{
  z-index: 999;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 30rpx;
}
